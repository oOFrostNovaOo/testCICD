global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['{{ IP_LEADER1 }}:9100', '{{ IP_WORKER1 }}:9100', '{{ IP_WORKER2 }}:9100', ]

  - job_name: 'jenkins_node_exporter'
    static_configs:
      - targets: ['jenkins:9100']

  - job_name: 'grafana'
    static_configs:
      - targets: ['grafana:3000']
